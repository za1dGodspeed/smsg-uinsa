<Layout title="Kontak" description="Hubungi SMSG untuk informasi lebih lanjut, kerja sama, atau pertanyaan seputar organisasi.">
    <!-- Page Header -->
    <section class="bg-primary-dark text-white py-16 sm:py-20">
        <div class="container-custom">
            <h1 class="text-white text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
                Hubungi Kami
            </h1>
            <p class="text-white/80 text-lg max-w-2xl">
                Untuk informasi lebih lanjut dan kerja sama, silakan menghubungi kami melalui berbagai saluran komunikasi berikut.
            </p>
        </div>
    </section>

    <!-- Contact Info Section -->
    <section class="section">
        <div class="container-custom">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Contact Cards -->
                <div>
                    <h2 class="mb-8">Informasi Kontak</h2>
                    <div class="space-y-6">
                        {contactInfo.map((info) => (
                            <div class="program-card">
                                <div class="flex items-start gap-4">
                                    <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                                        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={info.icon} />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-semibold text-primary-dark mb-1">{info.title}</h3>
                                        {info.href ? (
                                            <a href={info.href} class="text-primary font-medium hover:text-primary-dark">
                                                {info.value}
                                            </a>
                                        ) : (
                                            <p class="text-dark-gray font-medium">{info.value}</p>
                                        )}
                                        <p class="text-text-light text-sm mt-1">{info.description}</p>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>

                    <!-- Social Media -->
                    <div class="mt-10">
                        <h3 class="text-xl font-semibold text-primary-dark mb-6">Media Sosial</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                            {socialMedia.map((social) => (
                                <a
                                    href={social.href}
                                    class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl hover:bg-primary/10 transition-colors group"
                                >
                                    <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center shadow-sm group-hover:bg-primary group-hover:text-white transition-colors">
                                        <svg class="w-5 h-5 text-primary group-hover:text-white" fill="currentColor" viewBox="0 0 24 24">
                                            <path d={social.icon} />
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-dark-gray text-sm">{social.name}</p>
                                        <p class="text-text-light text-xs">{social.handle}</p>
                                    </div>
                                </a>
                            ))}
                        </div>
