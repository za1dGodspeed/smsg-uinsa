---
import Layout from '../layouts/Layout.astro';

// Placeholder gallery items - these can be replaced with actual images later
const galleryItems = [
    {
        title: 'Kegiatan Sosial',
        category: 'Pengabdian',
        placeholder: true
    },
    {
        title: 'Pelatihan Kepemimpinan',
        category: 'SDM',
        placeholder: true
    },
    {
        title: 'Forum Diskusi',
        category: 'Aspirasi',
        placeholder: true
    },
    {
        title: 'Bakti Masyarakat',
        category: 'Pengabdian',
        placeholder: true
    },
    {
        title: 'Gathering Anggota',
        category: 'Solidaritas',
        placeholder: true
    },
    {
        title: 'Seminar',
        category: 'SDM',
        placeholder: true
    },
    {
        title: 'Silaturahmi',
        category: 'Solidaritas',
        placeholder: true
    },
    {
        title: 'Workshop',
        category: 'SDM',
        placeholder: true
    }
];

const categories = ['Semua', 'Pengabdian', 'SDM', 'Aspirasi', 'Solidaritas'];
---

<Layout title="Galeri" description="Dokumentasi kegiatan dan momen SMSG dalam berbagai program dan acara organisasi.">
    <!-- Page Header -->
    <section class="bg-primary-dark text-white py-16 sm:py-20">
        <div class="container-custom">
            <h1 class="text-white text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
                Galeri
            </h1>
            <p class="text-white/80 text-lg max-w-2xl">
                Dokumentasi kegiatan dan momen SMSG dalam berbagai program dan acara organisasi.
            </p>
        </div>
    </section>

    <!-- Gallery Section -->
    <section class="section">
        <div class="container-custom">
            <!-- Filter Buttons -->
            <div class="flex flex-wrap justify-center gap-3 mb-12">
                {categories.map((category, index) => (
                    <button
                        class:list={[
                            'gallery-filter px-5 py-2 rounded-full font-medium text-sm transition-all',
                            index === 0 ? 'bg-primary text-white' : 'bg-gray-100 text-text-light hover:bg-primary/10 hover:text-primary'
                        ]}
                        data-category={category === 'Semua' ? 'all' : category}
                    >
                        {category}
                    </button>
                ))}
            </div>

            <!-- Gallery Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" id="gallery-grid">
                {galleryItems.map((item) => (
                    <div
                        class="gallery-item group relative aspect-square bg-gray-100 rounded-xl overflow-hidden cursor-pointer"
                        data-category={item.category}
                    >
                        <!-- Placeholder -->
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/20 to-primary-dark/30">
                            <div class="text-center p-4">
                                <svg class="w-12 h-12 text-primary/40 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                <span class="text-primary/60 text-sm">Foto Kegiatan</span>
                            </div>
                        </div>

                        <!-- Overlay -->
                        <div class="absolute inset-0 bg-gradient-to-t from-primary-dark/90 via-primary-dark/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-0 left-0 right-0 p-4">
                                <span class="inline-block px-3 py-1 bg-accent text-dark-gray text-xs font-semibold rounded-full mb-2">
                                    {item.category}
                                </span>
                                <h3 class="text-white font-semibold">{item.title}</h3>
                            </div>
                        </div>
                    </div>
                ))}
            </div>

            <!-- Empty State Message -->
            <div id="empty-state" class="hidden text-center py-16">
                <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-text-light">Belum ada foto dalam kategori ini.</p>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="section section-alt">
        <div class="container-custom">
            <div class="bg-white rounded-2xl p-8 sm:p-12 shadow-lg text-center">
                <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <h2 class="mb-4">Dokumentasi Kegiatan</h2>
                <p class="text-text-light max-w-2xl mx-auto mb-6">
                    Galeri ini akan terus diperbarui dengan dokumentasi kegiatan dan momen penting SMSG. Ikuti media sosial kami untuk mendapatkan update terbaru.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="#" class="btn btn-outline">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                        Instagram
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const galleryItems = document.querySelectorAll('.gallery-item');
    const emptyState = document.getElementById('empty-state');

    filterButtons.forEach(button => {
        button.addEventListener('click', () => {
            // Update active button
            filterButtons.forEach(btn => {
                btn.classList.remove('bg-primary', 'text-white');
                btn.classList.add('bg-gray-100', 'text-text-light');
            });
            button.classList.remove('bg-gray-100', 'text-text-light');
            button.classList.add('bg-primary', 'text-white');

            // Filter items
            const category = button.getAttribute('data-category');
            let visibleCount = 0;

            galleryItems.forEach(item => {
                const itemCategory = item.getAttribute('data-category');
                if (category === 'all' || itemCategory === category) {
                    item.classList.remove('hidden');
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                }
            });

            // Show/hide empty state
            if (emptyState) {
                if (visibleCount === 0) {
                    emptyState.classList.remove('hidden');
                } else {
                    emptyState.classList.add('hidden');
                }
            }
        });
    });
</script>