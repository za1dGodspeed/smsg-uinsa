---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';   // Astro’s content loader
import { client } from '../../tina/__generated__/client'; // Tina client (auto-created)

/* 1. Fetch posts from Git-based Tina collection */
const posts = await client.queries.postConnection();

/* 2. Build category set for filter buttons */
const categories = [
  'Pengabdian',
  'SDM',
  'Aspirasi',
  'Solidaritas',
];
---

<Layout title="Galeri" description="Dokumentasi kegiatan dan momen SMSG.">
  <header class="bg-primary-dark text-white py-16 sm:py-20">
    <div class="container-custom">
      <h1 class="text-white text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
                Galeri
            </h1>
      <p class="text-white/80 text-lg max-w-2xl">
        Dokumentasi kegiatan dan momen SMSG dalam berbagai program dan acara organisasi.
      </p>
    </div>
  </header>

  <section class="section">
    <div class="container-custom">
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <button
          class="gallery-filter px-5 py-2 rounded-full font-medium text-sm bg-primary text-white"
          data-category="all"
        >
          Semua
        </button>
        {categories.map((c) => (
          <button
            class="gallery-filter px-5 py-2 rounded-full font-medium text-sm bg-gray-100 text-text-light hover:bg-primary/10 hover:text-primary"
            data-category={c}
          >
            {c}
          </button>
        ))}
      </div>

      <!-- Gallery Grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
        id="gallery-grid"
      >
        {posts.data.postConnection.edges.map(({ node }) => (
          <a
            href={`/posts/${node._sys.filename}`}
            class="gallery-item group relative aspect-square bg-gray-100 rounded-xl overflow-hidden cursor-pointer block"
            data-category={node.category}
          >
            <img
              src={node.cover}
              alt={node.title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-primary-dark/90 via-primary-dark/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="inline-block px-3 py-1 bg-accent text-dark-gray text-xs font-semibold rounded-full mb-2">
                  {node.category}
                </span>
                <h3 class="text-white font-semibold">{node.title}</h3>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="hidden text-center py-16">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-text-light">Belum ada foto dalam kategori ini.</p>
      </div>
    </div>
  </section>

  <!-- CTA section – unchanged -->
  <section class="section section-alt">
    <div class="container-custom">
      <div class="bg-white rounded-2xl p-8 sm:p-12 shadow-lg text-center">
        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h2 class="mb-4">Dokumentasi Kegiatan</h2>
        <p class="text-text-light max-w-2xl mx-auto mb-6">
          Galeri ini akan terus diperbarui dengan dokumentasi kegiatan dan momen penting SMSG. Ikuti media sosial kami untuk mendapatkan update terbaru.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://www.instagram.com/smsg.uinsa/" class="btn btn-outline">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            Instagram
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<!-- keep your existing filter script -->
<script>
  document.querySelectorAll('.gallery-filter').forEach((btn) =>
    btn.addEventListener('click', () => {
      document.querySelectorAll('.gallery-filter').forEach((b) => {
        b.classList.remove('bg-primary', 'text-white');
        b.classList.add('bg-gray-100', 'text-text-light');
      });
      btn.classList.add('bg-primary', 'text-white');
      const cat = btn.dataset.category;
      let visible = 0;
      document.querySelectorAll('.gallery-item').forEach((item) => {
        const itemCat = item.dataset.category;
        if (cat === 'all' || itemCat === cat) {
          item.classList.remove('hidden');
          visible++;
        } else item.classList.add('hidden');
      });
      const empty = document.getElementById('empty-state');
      empty?.classList.toggle('hidden', visible !== 0);
    })
  );
</script>