---


const navItems = [
    { linkText: 'Beranda', href: '/' },
    { linkText: 'Tentang', href: '/tentang' },
    { linkText: 'Visi & Misi', href: '/visi-misi' },
    { linkText: 'Program', href: '/program' },
    { linkText: 'Galeri', href: '/galeri' },
    { linkText: 'Kontak', href: '/kontak' }
];

const currentPath = Astro.url.pathname;
---

<header class="bg-primary-dark sticky top-0 z-50 shadow-md">
    <nav class="container-custom">
        <div class="flex items-center justify-between py-4">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 nav-link">
                <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
                    <span class="text-primary-dark font-bold text-lg">S</span>
                </div>
                <span class="font-bold text-xl hidden sm:block">SMSG</span>
            </a>

            <!-- Desktop Navigation -->
            <ul class="hidden md:flex items-center gap-1">
                {navItems.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class:list={[
                                'nav-link px-4 py-2 rounded-md font-medium text-sm',
                                { 'bg-primary text-white': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
                            ]}
                        >
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden p-2 text-white hover:text-accent transition-colors"
                aria-label="Toggle menu"
                aria-expanded="false"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden hidden pb-4">
            <ul class="flex flex-col gap-1">
                {navItems.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class:list={[
                                'nav-link block px-4 py-3 rounded-md font-medium',
                                { 'bg-primary text-white': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
                            ]}
                        >
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </nav>
</header>

<script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    menuBtn?.addEventListener('click', () => {
        const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
        menuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
        mobileMenu?.classList.toggle('hidden');
    });
</script>